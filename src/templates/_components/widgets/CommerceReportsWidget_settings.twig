{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("milesherndon\\commercereports\\assetbundles\\commercereportswidgetwidget\\CommerceReportsWidgetWidgetAsset") %}

<ul>
  <li><strong>Batch Transactions:</strong> Choose a date range. Report to be imported into FundWare. Exports zip file of txts and csv.</li>
  <li><strong>Customer Order History:</strong> Choose a customer and a date range. Exports csv file of orders.</li>
  <li><strong>Indiana Sales Tax:</strong> Choose a date range. Exports csv file of orders with sales tax.</li>
  <li><strong>Inventory Sold:</strong> Choose a date range. Exports csv file of amount sold and inventory in date range.</li>
  <li><strong>Full Inventory:</strong> Exports csv file of total inventory.</li>
</ul>

{{ forms.selectField({
        label: 'Select a Report Type'|t,
        id: 'reportType',
        name: 'reportType',
        value: widget['reportType'],
        options: reportTypes
    })
}}

{{ forms.selectField({
        label: 'Select a Customer'|t,
        id: 'customer',
        name: 'customer',
        options: customers,
        value: widget['customer'],
    })
}}

{{ forms.dateField({
        label: 'Start Date'|t,
        instructions: 'The batch closes at 10pm the day before your selection.'|t,
        id: 'startDate',
        name: 'startDate',
    })
}}

{{ forms.dateField({
        label: 'End Date'|t,
        instructions: 'The batch closes at 10pm the day of your selection.'|t,
        id: 'endDate',
        name: 'endDate',
    })
}}
